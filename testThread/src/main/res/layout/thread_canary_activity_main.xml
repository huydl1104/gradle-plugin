<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/thread_canary_main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/thread_canary_bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/thread_canary_second_light"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/thread_canary_navigation_button_threads"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thread_canary_navigation_button_threads_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="center"
                android:src="@drawable/thread_canary_tab_threads"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:text="@string/thread_canary_tab_threads"
                android:textColor="@color/thread_canary_bottom_menu"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/thread_canary_navigation_button_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thread_canary_navigation_button_setting_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="center"
                android:src="@drawable/thread_canary_tab_setting"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:text="@string/thread_canary_tab_settings"
                android:textColor="@color/thread_canary_bottom_menu"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>