<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <Switch
        android:id="@+id/thread_canary_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:text="@string/thread_canary_setting_warning_notification"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="56dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/thread_canary_setting_warning_threads"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/thread_canary_warning_threads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/thread_canary_warning_threads" />
    </LinearLayout>
</LinearLayout>